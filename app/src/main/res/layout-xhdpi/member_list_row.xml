<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv1"
        android:clickable="true"
        android:layout_marginBottom="4dp"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_member" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:text="Name"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:layout_alignTop="@+id/person_photo"
                android:layout_toEndOf="@+id/person_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupancy"
                android:textSize="20sp"
                android:id="@+id/person_occupation"
                android:layout_below="@+id/person_name"
                android:layout_alignStart="@+id/person_name"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:background="@drawable/counter"
                android:gravity="center_horizontal|center_vertical"
                android:text="12" />

            <TextView
                android:id="@+id/person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_below="@+id/person_occupation"
                android:layout_alignStart="@+id/person_occupation"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/person_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:layout_alignStart="@+id/person_phone"
                android:layout_below="@+id/person_phone"
                android:textSize="16sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
