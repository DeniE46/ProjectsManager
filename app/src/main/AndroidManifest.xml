<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adk.projectsmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Team"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tasks"
            android:label="@string/title_activity_tasks"
            android:parentActivityName=".Team">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adk.projectsmanager.Team" />
        </activity>
        <activity
            android:name=".CreateTasks"
            android:label="@string/title_activity_create_tasks"
            android:parentActivityName=".Tasks">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adk.projectsmanager.Tasks" />
        </activity>
        <activity android:name=".LogInActivity" />
        <activity android:name=".SignUpActivity"/>
    </application>

</manifest>