    <android.support.v7.widget.CardView android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/rlayout"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cv1"
            android:background="?android:attr/selectableItemBackground">


            <RelativeLayout
                android:id="@+id/task_card_header_title_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/task_card_header">

                <TextView
                    android:id="@+id/task_card_number"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/task_position_bg"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0" />

                <TextView
                    android:id="@+id/task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/task_card_number"
                    android:layout_toStartOf="@+id/expand_content_view_cell"
                    android:paddingLeft="8dp"
                    android:text="Task Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/expand_content_view_cell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/task_card_icon_expand"

                    android:clickable="true" />


            </RelativeLayout>


            <TextView
                android:id="@+id/difficulty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/task_difficulty"
                android:layout_alignBottom="@+id/task_difficulty"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view4"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:text="Difficulty"
                />

            <View
                android:id="@+id/difficulty_divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/difficulty_label"
                android:layout_alignTop="@+id/difficulty_label"
                android:layout_below="@+id/view4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/difficulty_label"
                android:background="@color/tasks_status_color_silver"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/task_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_toEndOf="@+id/difficulty_divider"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Difficulty"
                android:textColor="@color/task_card_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_card_header_title_view"
                android:paddingBottom="10dp"
                android:paddingStart="6dp"
                android:paddingTop="10dp"
                android:text="Owner Name"
                android:textColor="@color/task_card_header"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_deadline_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_owner"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/deadline_divider"
                android:text="Deadline"
                android:textColor="@color/task_card_header"
                android:textStyle="bold" />

            <View
                android:id="@+id/deadline_divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/deadline_label"
                android:layout_alignTop="@+id/deadline_label"
                android:layout_below="@id/task_owner"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/deadline_label"
                android:background="@color/tasks_status_color_silver" />

            <TextView
                android:id="@+id/deadline_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/task_deadline_date"
                android:layout_alignTop="@id/task_deadline_date"
                android:layout_below="@id/task_owner"
                android:paddingStart="6dp"
                android:text="Deadline" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/task_deadline_date"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:layout_toStartOf="@+id/task_deadline_holder" />

            <RelativeLayout
                android:id="@+id/task_deadline_holder"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/task_card_header_title_view">

                <ImageView
                    android:id="@+id/task_deadline_color"
                    android:layout_width="60dp"
                    android:layout_height="150dp"
                    android:layout_alignBottom="@id/task_deadline_color"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_task_pattern"/>
            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

